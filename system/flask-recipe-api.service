[Unit]
Description=uWSGI Service for Flask Recipe API
Requires=nginx.service
After=nginx.service

[Service]
User=divreg  
WorkingDirectory=/var/www/flask_recipe_api
ExecStart=/usr/local/bin/uwsgi --ini /var/www/flask_recipe_api/flask_app_uwsgi.ini
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=flask-recipe-api

[Install]
WantedBy=multi-user.target
~                                 
